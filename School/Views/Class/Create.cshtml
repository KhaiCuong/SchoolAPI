@model ModelLib.Model.ClassModel
@{
    TempData["title"] = "Create a new Class ";
}

@if (ViewBag.Message != null)
{
    foreach (var item in ViewBag.Message)
    {
        <div class="alert alert-danger"> @item </div>
    }
}

<div class="container" style="height: 1000px">
    
    <form action="Create" enctype="multipart/form-data" method="post" class="w-75 m-auto ">
        <h2 class="mt-4 mb-5">Create a new Class</h2>
        <div class="form-group">
            <label> Class Id </label>
            <input asp-for="Class_Id" class="form-control" type="text" />
            <span asp-validation-for="Class_Id" class="text-danger"></span>
        </div >

        <div class="form-group ">
            <label>Class Name</label>
            <input asp-for="Class_Name" class="form-control" type="text" />
            <span asp-validation-for="Class_Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label> Quantity </label>
            <input asp-for="Quantity" class="form-control" type="number" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div >


        <div class="form-group">
            <label> Image </label>
            <input name="fileUpload" class="form-control" type="file" />

        </div>
        <div>
            <input name="Create" type="submit" class="btn btn-primary mt-5" />

        </div>
    </form>

</div>
