@using ModelLib.Model;
@model IEnumerable<ModelLib.Model.SubjectModels>
@{
    TempData["title"] = "list Subject";
}
@if (ViewBag.Message != null)
{
    foreach (var item in @ViewBag.Message)
    {
        <div class="alert alert-danger">
            @item
        </div>
    }

}
@*@await Html.PartialAsync("_CreateSubject",new SubjectModels())
*@@*<partial name="_CreateProduct" model="new Product()"/>*@
<div class="d-flex align-items-center justify-content-between">

        <h1>List Of Subject</h1>

       <a class="btn-primary btn" asp-action="Create">Create</a><

</div>

<table class="table table-hover">
    <tr>
        <th>Subject_Id</th>
        <th>Subject_Name</th>
        <th>Learn_time</th>
        <th>Subject_Photo</th>
        <th>Action</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Subject_Id</td>
            <td>@item.Subject_Name</td>
            <td>@item.Learn_time</td>
            <td><img src="@item.Subject_Photo" width="100" class="img-thumbnail" /></td>
            <td><a class="btn btn-warning" asp-route-id="@item.Subject_Id" asp-action="Edit">Edit</a></td>
            <td><a class="btn btn-danger" asp-route-id="@item.Subject_Id" asp-action="Delete">Delete</a></td>
        </tr>
    }
</table>