@model ModelLib.Model.ClassModel

@{
    TempData["title"] = "Edit a Class ";
}

@if (ViewBag.Message != null)
{
    foreach (var item in ViewBag.Message)
    {
        <div class="alert alert-danger"> @item </div>
    }
}


<form action="Edit" enctype="multipart/form-data" method="post" class="w-75 m-auto" style="height: 1000px">

    <h2 class="mt-4 mb-5">Edit Class</h2>
    <input asp-for="Class_Id" type="hidden" />

    <div class="form-group">
        <label> Class Id </label>
        <input asp-for="Class_Id" class="form-control" type="text" disabled />
    </div>


    <div class="form-group">
        <label>Class Name</label>
        <input asp-for="Class_Name" type="text" class="form-control" />
        <span asp-validation-for="Class_Name" class="text-danger"></span>
    </div>


@*    <div class="form-group">
        <input asp-for="IsAdmin" type="hidden"  />
    </div>*@

    <div class="form-group">
        <label> Quantity </label>
        <input asp-for="Quantity" type="number" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

@*    <div class="form-group">
        <label> Password </label>
        <input asp-for="Password" class="form-control" type="text" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>*@

    <div class="form-group">
        <label> Image </label>
        <input name="fileUpload" type="file" class="form-control" />
    </div>


    <div class="form-group mt-1">
        <img src="~/@Model.img" width="100" class="img-thumbnail" class="form-control" />
    </div>
    <div>
        <input name="Edit" type="submit" class="btn btn-primary mt-5" />

    </div>
</form>
